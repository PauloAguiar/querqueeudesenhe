<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
        <% include ../partials/home %>
    </head>
    <body class="container">
        <main>
        <div class="container">
            <div class="well well-sm no-color" style="border-bottom: 0px">
                <strong>Modo de Exibição</strong>
                <div class="btn-group">
                    <a href="#" id="list" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th-list">
                    </span>Lista</a> <a href="#" id="grid" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th"></span>Gride</a>
                </div>
            </div>
            <div id="products" class="row list-group">
            <% presentations.forEach(function(p) { %>
            <div class="item  col-xs-4 col-lg-4">
                <div class="thumbnail">
                    <img class="group list-group-image" src="<%= p.preview %>" alt="" />
                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">
                        <%= p.title %></h4>
                        <p class="group inner list-group-item-text">
                            <%= p.size %> Páginas</p>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <a class="" href="view/<%= p.id %>"><img src="./img/visualize.png"> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    </main>
    <% include ../partials/common_script %>
    <script type="text/javascript" src="/js/select.js"></script>
</body>
</html>